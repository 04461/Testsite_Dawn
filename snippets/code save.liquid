{% comment %}
  <!-- section -->
    {%- when 'text2' -%}
    {% if block.settings.showCheckbox ==true %}
      <div class="main-block">
  {% if block.settings.text != blank %}
    <div class="product-block1">
      <p class="text">
        {{ block.settings.text }}
      </p>
    </div>
  {% endif %}

  {% if block.settings.logo != blank %}
    <div class="product-block2">
      <div class="logo">
        <img src="{{ block.settings.logo  | img_url: "master" }}" alt="Logo">
      </div>
       <span id="productPrice" style="font-weight: bold; margin-right: 16px; margin-left: auto;">
       {{ product.selected_or_first_available_variant.price | money }}
      </span>
    </div>
  {% endif %}

  {% if block.settings.text != blank %}
    <div class="product-block3">
      <p id="price_ctm" class="text">
        {{ block.settings.text2 }}
      </p>
    <span id="productPriceWithAddon" style="font-weight: bold; margin-right: 16px; margin-left: auto;">
       {% assign addOnPrice = product.selected_or_first_available_variant.price | plus:  15000 %}
       
       {{ addOnPrice | money }}
    </span>
    </div> 
  {% endif %}
</div>
{% endif %}

