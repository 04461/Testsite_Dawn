<div class="row-faq faq-{{ section.id }}">
  {% for block in section.blocks %}
    <div class="block-faq block-{{ block.id }}">
      <style>
            #shopify-section-{{ section.id }} .block-{{ block.id }}{
        background-color: {{ block.settings.bg_color }};
            }
      </style>
      <h2 class="heading-faq">{{ block.settings.heading }}</h2>
      <p class="text-faq">{{ block.settings.text }}</p>
      <div class="button-faq">
        <a class="text-decoration" href="{{ block.settings.custom_button_link }}">
          {{- block.settings.custom_button_text -}}
        </a>
      </div>
    </div>
  {% endfor %}
</div>

<div class="progress-bar">
  <!--
    <div class="progress moving-text"> Offer gonna End </div>
    <div class="progress moving-text"> Offer gonna End </div>
    <div class="progress moving-text"> Offer gonna End </div>
  -->
  <h2 class="progress moving-text">Special Offer!</h2>
  <p class="progress moving-text">Get 20% off on all products this weekend only.</p>
  <a class="progress moving-text" href="#" id="btn">Shop Now</a>
</div>

<style>
   .progress-bar {
    width: 100%;
    height: 90px;
    background-color:  black;
     display:flex;
    overflow:hidden;
  }
    .progress-bar h2{
       margin-top: 24px;
    }

      .progress-bar p{
          margin-top: 21px;
    }

      .progress-bar a{
          padding: 27px 0;
      text-decoration:none;
      border-radius: 20px;
      cursor: pointer;
      transition: all .6s ease 0s;
      color: white;
      border: 1px solid black;
      margin-right: 20px;
    }
       .progress-bar:hover a{

         color:wheat;
       }
  .progress {
    width:100%;
    height: 100%;
  /*   background-color: #4caf50; */
    transition: width 0.5s ease;
    padding: 6px 0;
      font-size: 19px;
    color:white;
  }
  .moving-text {
    display: inline-block;
    animation: moveText 30s linear infinite;
  }

  @keyframes moveText {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }

</style>

<script>
const shopNowElement = document.getElementById('btn');
const originalText = shopNowElement.innerText;
const newText = "Let's Go";

shopNowElement.addEventListener('mouseenter', () => {
  shopNowElement.innerText = newText;
});

shopNowElement.addEventListener('mouseleave', () => {
  shopNowElement.innerText = originalText;
});

</script>

