<div class="shipping-{{ section.id }}">
  <div class="shipping wrapper">
    {% for block in section.blocks %}
      {% if block.type == 'column' %}
        {% if block.settings.url != blank %}
        {% endif %}
        <div style="text-align: center;" class="shipping-1 block-{{ block.id }}">
          <style>
            .block-{{ block.id }} {
              background-color : {{ block.settings.bg_color }};
            }
          </style>
          <img style="max-width:150px" src="{{ block.settings.image | img_url:"master" }}" alt="">

          <p class="heading">
            {{ block.settings.title }}
          </p>
          <p>
            {{ block.settings.description }}
          </p>
        </div>
        {% if block.settings.url != blank %}
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .shipping-1 .heading{
    font-weight: bold;
  }
    .shipping-{{ section.id }}{
      background-color : {{ section.settings.bg_color }};
    }

.shipping.wrapper .shipping-1 {
          width: 33.3% !important;
      }
  .shipping{
      align-items: center;
      justify-content: space-around;
      width: 100%;
      max-width: 1000px;
      margin-inline: auto;
      gap: 20px;
      position: relative;
      display: flex;
      margin-top: 36px;
      overflow:hidden;
  }
  .shipping.wrapper .shipping-1{
    width:auto;
    padding-top:10px
  }

    #shopify-section{{section.id}} .shipping .shipping-1{
      display:flex;
      max-width:100%;
    }
    @media screen and (max-width: 768px) {
      .shipping.wrapper .shipping-1 {
          width: 80% important;

      }

      }

    @media screen and (max-width: 768px ) {

      .shipping.wrapper{
         flex-direction:column;
       }
    }
</style>

