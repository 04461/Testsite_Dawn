  "settings": [
     {
        "type": "color",
        "label" :"Background Color",
        "id": "bg_color"
      }
  ],
   "blocks": [
  {
    "type": "column",
    "name": "t:sections.multicolumn.blocks.column.name",
    "settings": [
      {
        "type": "image_picker",
