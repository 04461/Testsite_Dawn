<div class="single-bock-{{ section.id }}">

 <div class="single-bock wrapper">
       {% for block in section.blocks %}
           {% if block.type == 'column'%}
             {%if block.settings.url != blank %}
         <a href="{{ block.settings.url }}">
               {% endif %}
        <div class="single-bock-1">
            <img style="max-width: 100px; float: left; "src="{{ block.settings.single-bock-1 | img_url:"master" }}" alt="">
         
            <div class="title1">
              <p>
               {{ block.settings.title1 }}
            </p>
          
            </div>
          <div class="description1">
           
           <p>
               {{ block.settings.description1 }}
            </p>
          </div>
        </div>
             {%if block.settings.url != blank %}
         </a>
               {% endif %}
            {% endif %}
        {% endfor %}
        
    </div>
  
</div>

<style>
  .single-bock{
    align-items: center;
    justify-content: space-around;
    width: 100%;
    max-width: 1000px;
    margin-inline: auto;
    gap: 20px;
    position: relative;
    display: flex;
    margin-top: 36px;
}
  .single-bock-1{
    margin:20px;
  }
  @media screen and (max-width: 549px) {
    .single-bock-1 {
        width: 100%;
    }

    }

  .single-bock-1 p{
    padding-left: 50px;
    margin-inline: auto;
    margin-left: 82px;
    max-width: 87%;
  }

    
  
</style>
{% schema %}
  {
    "name": "Single block",
    "settings": [

    ],
     "blocks": [
    {
      "type": "column",
      "name": "t:sections.multicolumn.blocks.column.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "single-bock-1",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "richtext",
          "id": "title1",
          "label": "t:sections.multicolumn.blocks.column.settings.title.label"
        },
        {
          "type": "inline_richtext",
          "id": "description1",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.multicolumn.blocks.column.settings.link.label"
        }
      ]
    }
  ],
    "presets": [
    {
      "name": "single Block",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
  }
{% endschema %}
